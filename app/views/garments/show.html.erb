<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>	

<%= render partial: 'header' %>
<div class="show">
	<h1><%= @garment.name %></h1>

	<strong>Image:</strong>
	<%= image_tag(@garment.image) %>

	<p><%= 'Bad combinations:' %></p>
	<% @garment.bad_combinations.each do |garment| %>
	<p><%= garment.name %></p>
	<% end %>

	<div class="center"><%= link_to "Edit", edit_garment_path(@garment), class: "btn btn-primary btn-lg"%></div>
</div>