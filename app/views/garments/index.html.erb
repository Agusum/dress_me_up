<%= render partial: 'header' %>

<h1 class="center">Wardrobe</h1>

<div class="table-garments center">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="center">Garment</th>
      <th class="center">Image</th>
      <th class="center">Category</th>
    </tr>
  </thead>

  <tbody>
    <% @garments.each do |garment| %>
      <tr>
        <td class="slim-name"><%= garment.name %></td>
        <td class="slim-image"><%= image_tag(garment.image) %></td>
        
        <td class="slim-category"><%= garment.category %></td>
        <td class="slim-row">
          <div class="vertical-center">
          <ul class="btn-group btn-wardrobe">
            <li class="inline left"><%= link_to "", garment, class: "btn btn-info glyphicon-eye-open glyph"%></li>
          </ul>
        
          <ul class="btn-group btn-wardrobe">
            <li class="inline left"><%= link_to "", edit_garment_path(garment), class: "btn btn-primary glyphicon-pencil glyph"%></li>
          </ul>
        
          <ul class="btn-group btn-wardrobe">
            <li class="inline left"><%= link_to "", garment, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger glyphicon-trash glyph"%></li>
          </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="center"><%= link_to "New Garment", new_garment_path, class: "btn btn-primary btn-lg"%></div>
<br>