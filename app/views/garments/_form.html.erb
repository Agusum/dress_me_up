<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.0.1-p7/css/bootstrap.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.0.1-p7/js/bootstrap.min.js"></script>

<div class="form">
<%= simple_form_for(@garment) do |f| %>
	<%= f.input :name, required: false %><br/>
	<%= f.input :category, collection: Garment::CATEGORY, as: :select, required: false %><br/>
	<div class="fileinput fileinput-new center" data-provides="fileinput">
		<div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 200px;"></div>
		<div>
  		<span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><%= f.file_field :image %></span>
  		<a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
		</div>
	</div>
	<br/><br/>
	<!--<%= f.input :bad_combination_ids, collection: Garment.all, as: :check_boxes%>-->
	<div class="center">
  	<%= f.submit 'Save', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>

