<%= render partial: 'header' %>

<div class="center">
	<h1>Today's Outfit</h1>
	<div class="cont">
	  <div class="inline">
			<% if @outfit[:shirt] == nil %>
				<p><%= image_tag("shirt-placeholder.png") %></p>
				<p>You have no shirt that match the rest of the outfit</p>
				<p><%= link_to 'Create new shirt', new_garment_path %></p>
			<% else %>
				
				<%= image_tag("/uploads/garment/image/#{@outfit[:shirt][:id]}/#{@outfit[:shirt][:image]}") %>
			<% end %>
		</div>

	  <div class="inline">
			<ul class="btn-group btn-lg">
	      <li><%= link_to "", outfit_index_path(pants: @outfit[:pants], shoes: @outfit[:shoes]), class: "btn btn-primary glyphicon-refresh glyph"%></li>
	      <br>
	      <li class="btn btn-warning glyphicon-ban-circle glyph" data-toggle="modal" data-target="#ModalShirt"></li>
	    </ul>
	  </div>
	</div>

	<div class="cont">
	  <div class="inline">
			<% if @outfit[:pants] == nil %>
				<p><%= image_tag("pants-placeholder.jpg") %></p>
				<p>Pants: You have no pants that match the rest of the outfit</p>
				<p><%= link_to 'Create new pants', new_garment_path %></p>
			<% else %>
				
				<%= image_tag("/uploads/garment/image/#{@outfit[:pants][:id]}/#{@outfit[:pants][:image]}") %>
			<% end %>
		</div>

		<div class="inline">
			<ul class="btn-group btn-lg">
	      <li><%= link_to "", outfit_index_path(shirt: @outfit[:shirt], shoes: @outfit[:shoes]), class: "btn btn-primary glyphicon-refresh glyph"%></li>
	      <br>
	      <li class="btn btn-warning glyphicon-ban-circle glyph" data-toggle="modal" data-target="#ModalPants"></li>
	    </ul>
	  </div>
	</div>

	<div class="cont">
	  <div class="inline">
			<% if @outfit[:shoes] == nil %>
				<p><%= image_tag("shoes-placeholder.jpg") %></p>
				<p>You have no shoes that match the rest of the outfit</p>
				<p><%= link_to 'Create new shoes', new_garment_path %></p>
			<% else %>
				
				<p><%= image_tag("/uploads/garment/image/#{@outfit[:shoes][:id]}/#{@outfit[:shoes][:image]}") %></p>
			<% end %>
		</div>

		<div class="inline">
			<ul class="btn-group btn-lg">
	      <li><%= link_to "", outfit_index_path(shirt: @outfit[:shirt], pants: @outfit[:pants]), class: "btn btn-primary glyphicon-refresh glyph"%></li>
	      <br>
	      <li class="btn btn-warning glyphicon-ban-circle glyph" data-toggle="modal" data-target="#ModalShoes"></li>
	    </ul>
	  </div>
	</div>

	<p></p>
	<a href="/"><button type="button" class="btn btn-primary btn-lg">Random Outfit</button></a>
</div>
<p></p>

<!-- Modal Shirts-->
<div class="modal fade" id="ModalShirt" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-custom">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Doesn't combine with?</h4><br>
        <div class="center">
        	<ul class="btn-group btn-lg">
	        	<li class="inline left margin-right"><%= link_to "Pants", garment_nomatching_path(@outfit[:shirt], nomatch: @outfit[:pants]), class: "btn btn-primary"%></li>
	        	<li class="inline"><%= link_to "Shoes", garment_nomatching_path(@outfit[:shirt], nomatch: @outfit[:shoes]), class: "btn btn-primary"%></li>
	        </ul>
	      </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

